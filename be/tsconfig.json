{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@icod2/contracts/client-server": [
        "../libs/contracts/dist/client-server"
      ],
      "@icod2/contracts": ["../libs/contracts/dist"]
    }
  },
  "references": [{ "path": "../libs/contracts" }]
}
